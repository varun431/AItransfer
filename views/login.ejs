<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>

    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/css/form-elements.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Theme CSS -->
    <link href="css/agency.css" rel="stylesheet">

</head>

<body onload="init()">

    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Login to <%= title %></h3>
                                <p>Enter your username and password to log on:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div id="status-div" class="request-status">
                            <p id="status">Garbage value</p>
                        </div>
                        <div id="signInDiv" class="form-bottom">
                            <form id="signInForm" role="form" onsubmit="return LoginUser()" class="login-form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Email</label>
                                    <input type="text" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Invalid email address"* required data-validation-required-message="Please enter your email id." name="form-username" placeholder="Email..." class="form-username form-control" id="signin_email">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    <input type="password" required data-validation-required-message="Please enter your password." name="form-password" placeholder="Password..." class="form-password form-control" id="signin_password">
                                </div>
                                <button id="signInBtn" type="submit" class="btn">Sign in</button>
                            </form>
                        </div>
                        <div id="signUpDiv" class="form-bottom">
                            <form id="signUpForm" role="form"  onsubmit="return CreateUser()" class="login-form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-name">Name</label>
                                    <input type="text" required data-validation-required-message="Please enter your name." name="form-name" placeholder="Name..." class="form-username form-control" id="signup_name">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Email</label>
                                    <input type="text" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Invalid email address"  required data-validation-required-message="Please enter your email id."  name="form-username" placeholder="Email..." class="form-username form-control" id="signup_email">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    <input type="password" required data-validation-required-message="Please enter your password." name="form-password" placeholder="Password..." class="form-password form-control" id="signup_password">
                                </div>
                                <button id="signUpBtn" type="submit" class="btn">Create an account</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 social-login">
                        <h3>...or login with:</h3>
                        <div class="social-login-buttons">
                            <a class="btn btn-link-1 btn-link-1-facebook" href="#">
                                <i class="fa fa-facebook"></i> Facebook
                            </a>
                            <a class="btn btn-link-1 btn-link-1-twitter" href="#">
                                <i class="fa fa-twitter"></i> Twitter
                            </a>
                            <a class="btn btn-link-1 btn-link-1-google-plus" href="#">
                                <i class="fa fa-google-plus"></i> Google Plus
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button id="signUpButton" class="btn-new">Create a new account</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button id="signInButton" class="btn-new">Log In</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- Javascript -->
    <script src="assets/js/jquery-1.11.1.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.backstretch.min.js"></script>
    <script src="assets/js/scripts.js"></script>

    <!--[if lt IE 10]>
        <script src="assets/js/placeholder.js"></script>
    <![endif]-->

    <!--Custom Javascript-->
    <script src="js/loginclient.js"></script>
</body>

</html>